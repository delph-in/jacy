;[ORTH <! "下さる" !>].

;kudasaru-light-2  :=
;light-shon-c2-stem-lex &
;[ORTH <! "くださる" !>].

;sashiageru-light-stem  :=
;light-minus_shon-v-stem-lex &
;[ORTH <! "差し上げる" !>].

;yaru-light  :=
