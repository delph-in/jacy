;[ORTH <! "やる" !>].

kudasaru-light :=
light-perspective-shon-c2-stem-lex &
[ORTH <! "下さる" !>,
 SYNSEM.LOCAL [LKEYS.--KEYREL [PRED 'kudasaru,ARG2 #obj2ind],
               CTXT.EMPATHY.EMPEE #obj2ind]].

kudasaru-light-2 :=
light-perspective-shon-c2-stem-lex &
[ORTH <! "くださる" !>,
 SYNSEM.LOCAL [LKEYS.--KEYREL [PRED 'kudasaru,ARG2 #obj2ind],
               CTXT.EMPATHY.EMPEE #obj2ind]].

kureru-light  :=
light-perspective-v-stem-lex &
[ORTH <! "くれる" !>,
SYNSEM.LOCAL [LKEYS.--KEYREL [PRED 'kureru,ARG2 #obj2ind],
              CTXT.EMPATHY.EMPEE #obj2ind]].

ageru-light :=
light-perspective-v-stem-lex &
[ORTH <! "あげる" !>,
SYNSEM.LOCAL [LKEYS.--KEYREL [PRED 'ageru,ARG1 #sbjind],
              CTXT.EMPATHY.EMPEE #sbjind]].

sashiageru-light :=
